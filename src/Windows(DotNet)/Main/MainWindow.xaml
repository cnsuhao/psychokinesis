<mui:ModernWindow  x:Class="Psychokinesis.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        
        Title="Psychokinesis" Height="350" Width="525" WindowStartupLocation="CenterScreen"
        ContentSource="/Welcome" Closing="ModernWindow_Closing" Closed="ModernWindow_Closed" Loaded="ModernWindow_Loaded" Unloaded="ModernWindow_Unloaded">
    <mui:ModernWindow.TitleLinks>
        <mui:Link x:Name="DeviceManagerTitle" DisplayName="我的终端" Source="/DeviceManager" />
    </mui:ModernWindow.TitleLinks>
    
    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="欢迎使用">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="" Source="/Welcome" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="我的终端" GroupKey="settings">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="" Source="/DeviceManager" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>
