<UserControl x:Class="Psychokinesis.Main.DeviceManagerWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="接入的终端" Style="{StaticResource Heading2}" Margin="0,0,0,8" />
            <DataGrid Name="DeviceListGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" IsReadOnly="True" >
                <DataGrid.Columns>
                    <mui:DataGridTextColumn Header="终端ID"  Binding="{Binding DeviceName}"/>
                    <mui:DataGridTextColumn Header="终端名称"  Binding="{Binding DeviceNickName}"/>
                    <mui:DataGridTextColumn Header="接入时间" Binding="{Binding JoinTime}" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</UserControl>
